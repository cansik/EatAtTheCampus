<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EatAtTheCampus.MenuView">
	<ContentView.Content>
		<StackLayout Padding="10">
			<StackLayout.GestureRecognizers>
				<TapGestureRecognizer Tapped="OnItemClicked" />
			</StackLayout.GestureRecognizers>
			<Label Text="{Binding MenuType}" FontSize="10" HorizontalTextAlignment="Center" />
			<Label Text="{Binding Name}" FontSize="20" HorizontalTextAlignment="Center" />
			<Label Text="{Binding Trimmings}" FontSize="16" HorizontalTextAlignment="Center" />
			<Label Text="{Binding Price}" FontSize="12" HorizontalTextAlignment="Center" />
			<Label Text="{Binding Info}" FontSize="10" HorizontalTextAlignment="Center" />
		</StackLayout>
	</ContentView.Content>
</ContentView>