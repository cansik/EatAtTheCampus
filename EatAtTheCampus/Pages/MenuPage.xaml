<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EatAtTheCampus.MenuPage" xmlns:local="clr-namespace:EatAtTheCampus;assembly=EatAtTheCampus" Title="Menus">
	<ContentPage.Content>
		<AbsoluteLayout>
			<!-- background image -->
			<Image Source="{local:ImageResource EatAtTheCampus.Resources.background_light.jpg}" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />
			<ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 0.9" Padding="20, 0, 20, 0" AbsoluteLayout.LayoutFlags="All" VerticalOptions="Fill">
				<StackLayout x:Name="resultLayout" Padding="10">
					<ActivityIndicator x:Name="activityIndicator" Color="Gray" IsRunning="true" />
				</StackLayout>
			</ScrollView>
		</AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>